{
  "name": "typescript-demo",
  "version": "1.0.0",
  "description": "Demonstration typescript project",
  "main": "main.ts",
  "scripts": {
    "test": "jest",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "typescript"
  ],
  "author": "MikingTheViking",
  "license": "ISC",
  "dependencies": {
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
